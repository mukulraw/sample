        android:layout_width="300dp"
        android:layout_height="45dp"
        android:id="@+id/Linear4"
        android:layout_below="@id/Linear3"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="35dp"
        android:background="#0084b4"
